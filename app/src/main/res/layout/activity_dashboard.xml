<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/nutads"
        android:contentDescription="Logo NUTADS"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Operação"
        android:backgroundTint="@color/logo_purple"
        android:textColor="@color/logo_purple_text" />

    <Button
        android:id="@+id/btnExtrato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extrato"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/logo_purple"
        android:textColor="@color/logo_purple_text" />

    <ImageButton
        android:id="@+id/btnSair"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:contentDescription="Sair do app"
        android:scaleType="fitCenter"
        android:src="@drawable/sair" />


</LinearLayout>
